
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>

<h2>Hizmet Ekle</h2>

<div class="col-lg-6">

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Browser Default</h5>
            
            <!-- Browser Default Validation -->
            <form class="row g-3" method="post" action="/Hizmet/Create/" enctype="multipart/form-data">
                <div class="col-mb-3">
                    <label for="validationDefault01" class="form-label">Başlık</label>
                    <input type="text" class="form-control"  id="Baslik" name="Baslik" required >
                </div>
                <div class="col-mb-3>
                    <label for="validationDefault01" class="form-label">Açıklama</label>
                    <textarea name="Aciklama" required class="ckeditor"></textarea>
                </div>
                <div class="col-mb-3">
                    <label for="validationDefaultUsername" class="form-label">Resim</label>
                    <div class="input-group">
                        <input type="file" class="form-control" name="ResimURL" required accept=".jpg,.png,.jpeg">
                    </div>
                </div>
                <div class="col-12">
                    <button class="btn btn-primary" type="submit">Kaydet</button>
                    <button class="btn btn-default" type="submit"><a href="/Hizmet/Index">İptal</a></button>
                </div>
            </form>
            <!-- End Browser Default Validation -->

        </div>
    </div>

</div>

