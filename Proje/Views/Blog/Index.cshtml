@model IEnumerable<Proje.Models.Model.Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/DataTables/jquery.dataTables.js"></script>
<link href="~/Content/DataTables/css/jquery.dataTables.css" rel="stylesheet" />


<h2>Blog Kayıtları</h2>
<br />

<a class=" btn btn-outline-dark" href="/Blog/Create/">Yeni Blog Ekle</a>
<br />
<br />

<div class="card">
    <div class="card-body">

        <!-- Table with hoverable rows -->
        <table class="table table-hover" id="myTable">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Başlık</th>
                    <th scope="col">Kategori</th>
                    <th scope="col">ResimURL</th>
                    <th scope="col">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.BlogId</th>
                        <td>@item.Baslik</td>
                        <td>@item.Kategori.KategoriAd</td>
                        <td><img src="@item.ResimURL" width="100" height="100" /></td>
                        <td><a href="/Blog/Edit/@item.BlogId">Güncelle</a> | <a href="/Blog/Delete/@item.BlogId">Sil</a> </td>
                    </tr>
                }

            </tbody>
        </table>
        <!-- End Table with hoverable rows -->

    </div>
</div>

