
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>

<h2>Blog Kayıt Ekle</h2>

<div class="card">
    <div class="card-body">
        <!-- Browser Default Validation -->
        @*<form class="row g-3" method="post" action="/Blog/Create" enctype="multipart/form-data">*@

        @using (Html.BeginForm("Create","Blog",FormMethod.Post,new { enctype="multipart/form-data"}))
        {
            @Html.AntiForgeryToken();
            <div class="col-mb-3">
                <label for="validationDefault01" class="form-label">Başlık</label>
                <input type="text" class="form-control" id="Baslik" name="Baslik" required>
            </div>
            <div class="col-mb-3">
                <label for="validationDefault02" class="form-label">Kategori</label>
                @Html.DropDownList("KategoriId", null, new { @class = "form-control" })
            </div>
            <div class="col-mb-3">
                <label for="validationDefault02" class="form-label">İçerik</label>
                <textarea class="ckeditor" name="Icerik"></textarea>
            </div>
            <div class="col-mb-3">
                <label for="validationDefault01" class="form-label">Resim</label>
                <input type="file" class="form-control" name="ResimURL" accept=".png,.jpg,.jpeg" required>
            </div>



            <div class="col-12">
                <button class="btn btn-primary" type="submit">Ekle</button>
                <button class="btn btn-outline-danger" type="submit"><a href="/Blog/Index/">İptal</a></button>

            </div>
        }

        @*</form>*@
        <!-- End Browser Default Validation -->

    </div>
</div>

